@PACKAGE_INIT@

set(ScratchRobin_VERSION @PROJECT_VERSION@)

# Provide the library target
if(NOT TARGET scratchrobin_lib)
    include("${CMAKE_CURRENT_LIST_DIR}/ScratchRobinTargets.cmake")
endif()

# Set up include directories
set_and_check(ScratchRobin_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/include")
set(ScratchRobin_LIBRARIES scratchrobin_lib)

# Set up compile definitions
set(ScratchRobin_DEFINITIONS "")

# Check if all required components are available
check_required_components(ScratchRobin)

# Provide alias for consistency
if(TARGET scratchrobin_lib AND NOT TARGET ScratchRobin::scratchrobin_lib)
    add_library(ScratchRobin::scratchrobin_lib ALIAS scratchrobin_lib)
endif()

# Display found message
if(NOT ScratchRobin_FIND_QUIETLY)
    message(STATUS "Found ScratchRobin: ${ScratchRobin_VERSION}")
endif()
